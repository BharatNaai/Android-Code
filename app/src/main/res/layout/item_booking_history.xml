<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/input_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Salon Image -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_salon_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_salon_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/accent_color"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <!-- Booking Info -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/booking_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/cv_salon_image"
            app:layout_constraintEnd_toStartOf="@id/tv_booking_date"
            app:layout_constraintStart_toEndOf="@id/cv_salon_image"
            app:layout_constraintTop_toTopOf="@id/cv_salon_image">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_salon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salon Elegance"
                android:textColor="@color/primary_text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Haircut"
                android:textColor="@color/secondary_text_color"
                android:textSize="14sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Booking Date -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_booking_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oct 12, 2023"
            android:textColor="@color/secondary_text_color"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
