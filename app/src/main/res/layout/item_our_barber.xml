<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_barber"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_12dp"
    android:background="@drawable/notification_card_background"
    android:padding="12dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_barber"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/circle_background"
        android:contentDescription="@null"
        android:src="@drawable/ic_person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primary_text_color"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_barber_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text=""
        tools:text="Liam Harper"
        android:textColor="@color/primary_text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_barber"
        app:layout_constraintTop_toTopOf="@id/iv_barber"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_barber_role"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=""
        tools:text="Haircut Specialist"
        android:textColor="@color/secondary_text_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_barber_name"
        app:layout_constraintTop_toBottomOf="@id/tv_barber_name"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rating_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:padding="@dimen/margin_4dp"
        app:layout_constraintStart_toStartOf="@id/tv_barber_role"
        app:layout_constraintTop_toBottomOf="@id/tv_barber_role">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_star"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_star_filled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#FFD54F"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text=""
            tools:text="4.9 (120 reviews)"
            android:textColor="@color/secondary_text_color"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_star"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_service1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=""
        tools:text="Classic Haircut"
        android:textColor="@color/primary_text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/tv_price1"
        app:layout_constraintStart_toStartOf="@id/iv_barber"
        app:layout_constraintTop_toBottomOf="@id/rating_row"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        tools:text="$40"
        android:textColor="@color/primary_text_color"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_service1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_service2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        tools:text="Beard Trim"
        android:textColor="@color/primary_text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/tv_price2"
        app:layout_constraintStart_toStartOf="@id/tv_service1"
        app:layout_constraintTop_toBottomOf="@id/tv_service1"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        tools:text="$25"
        android:textColor="@color/primary_text_color"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_service2"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_book_now"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_primary_background"
        android:text="@string/book_now"
        android:textAllCaps="false"
        android:textColor="@color/text_on_primary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_service2"/>

</androidx.constraintlayout.widget.ConstraintLayout>